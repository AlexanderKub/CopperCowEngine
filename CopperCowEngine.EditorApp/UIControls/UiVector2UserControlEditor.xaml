<UserControl x:Class="CopperCowEngine.EditorApp.UIControls.UiVector2UserControlEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             x:Name="_uiv2uc">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <xctk:DoubleUpDown Grid.Column="0" Foreground="{StaticResource ButtonForeground}"
                           Value="{Binding XVal}" Margin="2,0" />
        <xctk:DoubleUpDown Grid.Column="1" Foreground="{StaticResource ButtonForeground}"
                           Value="{Binding YVal}" Margin="2,0" />
    </Grid>
</UserControl>
